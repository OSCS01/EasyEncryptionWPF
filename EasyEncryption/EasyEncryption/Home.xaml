<Window x:Class="EasyEncryption.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyEncryption"
        mc:Ignorable="d"
        Title="Home" Height="472" Width="710.5">
    <Grid Margin="0,-10,0.333,9.667">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="44*"/>
            <ColumnDefinition Width="22*"/>
            <ColumnDefinition Width="952*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="AddFiles" Content="Files" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="13,70,0,0" Click="AddFiles_Click" Grid.Column="3"/>
        <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="74" Margin="142,70,0,0" Grid.Column="3"/>
        <TabControl x:Name="tabControl1" HorizontalAlignment="Left" Height="256" Margin="13.5,129,0,0" Width="587" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Top" Grid.Column="3" SelectionChanged="SelectedPage">
            <TabItem Header="Selected Files">
                <ListView x:Name="selectedFiles" HorizontalAlignment="Left" Height="230" VerticalAlignment="Top" Width="582" Grid.RowSpan="3" Margin="0,0,-1,-0.333">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Filename" DisplayMemberBinding="{Binding Originalfilename}"/>
                            <GridViewColumn Header="Size" DisplayMemberBinding="{Binding Size}"/>
                            <GridViewColumn Header="Path" DisplayMemberBinding="{Binding path}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
            <TabItem Header="My Files" HorizontalAlignment="Left" Width="59">
                <ListView x:Name="myFiles" HorizontalAlignment="Left" Height="230" VerticalAlignment="Top" Width="582" Grid.RowSpan="3" Margin="0,0,-1,-0.333" SelectionMode="Multiple">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Filename" Width="75" DisplayMemberBinding="{Binding Originalfilename}"/>
                            <GridViewColumn Header="Size" Width="50" DisplayMemberBinding="{Binding Size}"/>
                            <GridViewColumn Header="Group" Width="60" DisplayMemberBinding="{Binding shared}"/>
                            <GridViewColumn Header="Owner" Width="60" DisplayMemberBinding="{Binding owner}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </TabItem>
        </TabControl>
        <Button x:Name="UploadBtn" Content="Upload" Grid.Column="3" HorizontalAlignment="Left" Margin="526.5,415,0,0" VerticalAlignment="Top" Width="74" Click="UploadBtn_Click"/>
        <TextBox x:Name="textBox1" Grid.Column="3" HorizontalAlignment="Left" Height="78" Margin="318.5,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="225"/>
        <TextBlock Grid.Column="3" HorizontalAlignment="Left" Margin="13.5,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button Content="Download" Grid.Column="3" HorizontalAlignment="Left" Margin="526.5,415,0,0" VerticalAlignment="Top" Width="74" Visibility="Hidden"  x:Name="downloadBtn" Click="downloadBtn_Click"/>
        <Button Content="View Logs" Grid.Column="3" HorizontalAlignment="Left" Margin="437.5,415,0,0" VerticalAlignment="Top" Width="74" x:Name="ViewLogBtn" Visibility="Hidden" Click="ViewLogBtn_Click"/>
    </Grid>
</Window>
