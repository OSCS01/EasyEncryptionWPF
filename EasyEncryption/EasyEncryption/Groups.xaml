<Window x:Class="EasyEncryption.Groups"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyEncryption"
        mc:Ignorable="d"
        Title="Groups" Height="300" Width="300">
    <Grid>
        <Label Content="Groups" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Margin="107,41,0,0"/>
        <Button x:Name="CreateGroup" Content="Create" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="110,242,0,0" Click="CreateGroup_Click"/>
        <ListView x:Name="myGroups" Margin="0,83,-0.4,43.4" SelectionChanged="ListView_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Your Groups" DisplayMemberBinding="{Binding group}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
